<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    
    <persistence-unit name="sms-persistence-unit" transaction-type="JTA">
        
        <jta-data-source>java:jboss/datasources/StudentDS</jta-data-source>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.example.sms.model.Person</class>
        <class>com.example.sms.model.Student</class>
        <class>com.example.sms.model.Group</class>
        <class>com.example.sms.model.Course</class>
        <class>com.example.sms.model.Enrollment</class>
        <class>com.example.sms.model.Grade</class>
        <class>com.example.sms.model.Teacher</class>
        <class>com.example.sms.model.Dean</class>
        <class>com.example.sms.model.Admin</class>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            </properties>
        
    </persistence-unit>
</persistence>